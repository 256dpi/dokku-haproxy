#!/usr/bin/env bash

# enable it
sed -i 's/ENABLED=0/ENABLED=1/g' /etc/default/haproxy

# move default config
if [[ ! -f /etc/haproxy/_haproxy.cfg ]]; then
  mv /etc/haproxy/haproxy.cfg /etc/haproxy/_haproxy.cfg
fi

# enable stats
cat<<EOF > /etc/haproxy/_dokku_fake.cfg
listen stats :9090
  balance
  mode http
  stats enable
  stats auth admin:admin
EOF

# restart service
sudo service haproxy restart
